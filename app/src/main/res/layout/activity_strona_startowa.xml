<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:text="@string/witaj1"
            tools:fontFamily="serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="7dp"
            style="@style/nice_text"/>

        <TextView
            android:id="@+id/textView3"
            style="@style/nice_text"
            android:text="@string/witaj2"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            tools:fontFamily="serif"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/Losowanie"
            android:layout_height="300dp"
            android:layout_width="400dp"
            android:gravity="center_horizontal"
            android:src="@drawable/coding_cat"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp" />

        <TextView
            android:id="@+id/textView4"
            style="@style/nice_text"
            android:text="@string/poznaj_powody"
            android:layout_below="@+id/Losowanie"
            tools:fontFamily="serif"
            android:layout_marginTop="7dp"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_height="62dp"
            android:layout_width="77dp"
            android:gravity="center_horizontal"
            android:background="@drawable/image_rounded_corner"
            app:srcCompat="@drawable/ciacho"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>
</ScrollView>